// Niri configuration file in KDL format.
// See https://github.com/YaLTeR/niri/blob/main/doc/config.kdl for all options.

// Startup applications
startup {
    spawn "waybar" "-c" "~/nixos-config/dotfiles/waybar/config" "-s" "~/nixos-config/dotfiles/waybar/style.css"
    spawn "waybar" "-c" "~/nixos-config/dotfiles/waybar/config-bottom" "-s" "~/nixos-config/dotfiles/waybar/style-bottom.css"
    spawn "dunst"
    spawn "swww-daemon"
}

// Set a modifier key. "Super" is the Windows/Command key.
modifiers "Super"

// Define some basic keybindings.
binds {
    // Super + Return to open a terminal.
    "Return" spawn "kitty"

    // Rofi launchers and wallpaper selector
    "d" spawn "rofi" "-show" "drun"
    "r" spawn "rofi" "-show" "run" 
    "w" spawn "sh" "-c" "~/.local/bin/wallpaper-selector \"$(~/.local/bin/wallpaper-selector | rofi -dmenu -p 'Select Wallpaper')\""
    "Tab" spawn "rofi" "-show" "window"

    // Super + Q to close the focused window.
    "q" close-window

    // Super + E to open file manager.
    "e" spawn "nemo"

    // Super + Shift + Q to exit Niri.
    "Shift+q" exit
}
